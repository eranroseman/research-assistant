[run]
source = src
branch = True
parallel = True
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */site-packages/*
    */venv/*
    */env/*

[report]
# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code
    def __repr__
    def __str__

    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run
    if 0:
    if __name__ == .__main__.:
    if TYPE_CHECKING:

    # Don't complain about abstract methods
    @(abc\.)?abstractmethod

    # Ignore type checking imports
    from typing import

ignore_errors = True
precision = 2
show_missing = True
skip_covered = False
sort = Cover

[html]
directory = htmlcov
title = Research Assistant Coverage Report
show_contexts = True

[xml]
output = coverage.xml

[paths]
source =
    src/
    */src

[json]
output = coverage.json
pretty_print = True
show_contexts = True
